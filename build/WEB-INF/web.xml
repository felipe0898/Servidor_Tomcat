<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.example.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/tomcat_server</url-pattern>
    </servlet-mapping>
      <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/tomcat_server_delete</url-pattern>
    </servlet-mapping>
      <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.example.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/tomcat_server_update</url-pattern>
    </servlet-mapping>

       <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.example.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/tomcat_server_add</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>default</servlet-name>
        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
</web-app>